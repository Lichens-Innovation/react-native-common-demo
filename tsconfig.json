{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "~/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@expo-rv-mjpeg-streamer": ["modules/expo-rv-mjpeg-streamer"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
